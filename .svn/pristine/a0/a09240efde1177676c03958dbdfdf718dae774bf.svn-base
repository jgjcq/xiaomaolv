.workspace div {
	border: solid 1px lightgray;
	background: rgba(211, 211, 211, 0.25);
	padding: 0;
	padding-bottom: 15px;
	margin-bottom: 15px;
	margin-right: 30px;
	font-family: '微软雅黑';
	cursor: pointer;
}

.workspace div:hover {
	border: solid 1px gray;
	background: rgba(211, 211, 211, 0.85);
}

.workspace div img {
	width: 100%;
	height: 150px;
}

.workspace div>span:nth-child(2) {
	display: block;
	text-align: left;
	padding: 10px 5px 10px 8px;
	font-size: 13px;
	color: black;
	font-weight: bolder;
	letter-spacing: 0.2em;
	height: 48px;
	overflow: hidden;
}

.workspace div>span:nth-child(3) {
	color: #ff2727;
	font-size: 12px;
	padding-top: 10px;
	padding-left: 8px;
	padding-right: 5px;
}

.workspace div>span b {
	font-size: 18px;
	letter-spacing: 0;
	color: #ff2727;
	margin-right: 3px;
}

.workspace div>span:nth-child(4) {
	color: rgba(21, 19, 19, 0.68);
	font-size: 12px;
	padding-top: 10px;
	letter-spacing: 0.5px;
	float: right;
	margin-top: -4px;
	padding-right: 10px;
}

.loadingRow span,
.endRow span {
	display: block;
	text-align: center;
	font-size: 18px;
	font-weight: bolder;
	visibility: hidden;
}

.page-header span{
	font-size: 18px;
    font-family: '黑体';
    margin-right:35px;
}

div.orderDiv{
	padding-bottom:10px;
}
